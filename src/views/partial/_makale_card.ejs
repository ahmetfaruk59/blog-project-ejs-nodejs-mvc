<% 
  let heightIm='';
  if (index==undefined) {
      heightIm='600';
  } else {
      const mod=index %10;
      if (mod===0) {
        heightIm="600"
      } else {
        heightIm="60"+mod;
      }
  }
%> 
<div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="https://source.unsplash.com/random/1200x<%-heightIm%> " alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">

        <div class="media-content">
          <p class="title is-4"><%-makale.title.rendered %> </p>
        </div>
      </div>
  
      <div class="content">
            <%-index==undefined? makale.content.rendered : makale.excerpt.rendered.slice(0,50) %>
            <br>
            <% if (index!=undefined) { %>
              <a href="/blog/<%=makale.id %> ">Devamını Oku.</a>
            <% } %>
            
      </div>
    </div>
  </div>